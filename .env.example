# =========================
# Telegram
# =========================
BOT_TOKEN=your_telegram_bot_token
BOT_PARSE_MODE=HTML
ADMIN_TELEGRAM_IDS=123456789

# =========================
# App Security
# =========================
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=change_me_long_random_string
SESSION_TTL_SECONDS=900
PIN_BCRYPT_ROUNDS=12

# =========================
# PostgreSQL
# =========================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=wg_bot
POSTGRES_USER=wg_bot
POSTGRES_PASSWORD=wg_bot_password
DATABASE_DSN=postgresql://wg_bot:wg_bot_password@postgres:5432/wg_bot

# =========================
# Redis
# =========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_DSN=redis://redis:6379/0

# =========================
# WireGuard Defaults
# =========================
WG_INTERFACE_NAME=wireguard1
WG_SERVER_PUBLIC_KEY=replace_with_server_public_key
WG_SERVER_PRIVATE_KEY=replace_with_server_private_key
WG_ENDPOINT_HOST=vpn.example.com
WG_ENDPOINT_PORT=51820
WG_DNS_SERVERS=1.1.1.1,1.0.0.1
WG_NETWORK_CIDR=10.0.0.0/24
WG_ALLOWED_IPS=0.0.0.0/0,::/0
WG_PERSISTENT_KEEPALIVE=25

# =========================
# AmneziaWG Obfuscation Defaults
# =========================
WG_JUNK_PACKET_COUNT=5
WG_JUNK_PACKET_MIN_SIZE=90
WG_JUNK_PACKET_MAX_SIZE=220
WG_INIT_PACKET_JUNK_SIZE=40
WG_RESPONSE_PACKET_JUNK_SIZE=120
WG_UNDERLOAD_PACKET_JUNK_SIZE=80
WG_TRANSPORT_PACKET_MAGIC=666

# =========================
# MikroTik API
# =========================
MIKROTIK_ENABLED=true
MIKROTIK_HOST=192.168.88.1
MIKROTIK_PORT=8729
MIKROTIK_USE_TLS=true
MIKROTIK_USERNAME=api_user
MIKROTIK_PASSWORD=api_password
MIKROTIK_TIMEOUT_SECONDS=15
MIKROTIK_RETRY_ATTEMPTS=3
MIKROTIK_RETRY_BACKOFF_SECONDS=2
MIKROTIK_ENCRYPTION_KEY=replace_with_fernet_key

# Optional multi-server mode (JSON string)
# Example: [{"name":"mt1","host":"10.0.0.1","port":8729,"username":"api","password":"***","use_tls":true}]
MIKROTIK_SERVERS_JSON=[]

# =========================
# Logging
# =========================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
